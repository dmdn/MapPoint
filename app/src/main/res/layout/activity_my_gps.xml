<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0e0e0" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewSatellite"
            android:src="@drawable/signal_off" />

        <TextView
            android:id="@+id/tvGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#243137"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvGPS_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d64612"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvGPS_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d64612"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvGPS_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textColor="#d64612"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnSaveGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="@string/save_coordinate"/>

    </LinearLayout>
</LinearLayout>
